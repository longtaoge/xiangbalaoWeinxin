/* pages/xiangbalao/mine/mine.wxss */
.mine-box{
  width: 100%;
  height: 100%;
   font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
   display: flex;
   flex-direction: column;

}

label{
  display: flex;
  flex-direction: column
}

label view{
  display: flex;
  margin-top: 20rpx;
}

label view text{
  margin-top:5prx;
}
label view input{
 flex: 1;
 border-bottom: 1px solid #aaa;
}

.user{
  height: 500rpx;
  width: 100%;
}

.user-prc{
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center; 
}
.user image{
  height: 260rpx;
  width: 260rpx;
  border-radius: 130rpx;

}
.user-name{
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-text{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 14px;
  color: #008842;
}

.user-text text{
  display: flex;
  justify-content: center;
  width: 300rpx;
}

.btn{
  flex: 1;
  width: 100%;
}

.btn image{
  width: 100rpx;
  height: 100rpx;
}

.btn ul{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

}

.btn ul li{
  width: 30%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;

}

.footer{
    height: 100%;

}
button {

  width: 600rpx;
  margin: 0 auto;
}
